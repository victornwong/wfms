import org.victor.*;

Generals kiboo = new Generals();
SqlFuncs sqlhand = new SqlFuncs();
GuiFuncs guihand = new GuiFuncs();

userAccessObj useraccessobj = new userAccessObj();
sechand = new SecurityFuncs(useraccessobj);

