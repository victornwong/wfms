class pwd_tb_Listener implements org.zkoss.zk.ui.event.EventListener
{
	public void onEvent(Event event) throws UiException
	{
		loginToSystem(loginbutt);
	}
}
tb_password.addEventListener("onOK",new pwd_tb_Listener());

]]>
